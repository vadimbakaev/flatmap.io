-- By default this file is used by `persistFileWith` in Model.hs (which is imported by Foundation.hs)
-- Syntax for this file here: https://github.com/yesodweb/persistent/blob/master/docs/Persistent-entity-syntax.md
-- Adding "json" causes ToJSON and FromJSON instances to be derived.

-- Protocol
PromoteNewCompanyRequest json
   item NewCompanyId
  
WishlistRequest json
   item CompanyId

WishlistResponse json
   items [CompanyId]

-- Dependecy
-- Mapquest

GeoResponse json
  results [ResultResponse]

ResultResponse json
  locations [LocationResponse]

LocationResponse json
  latLng CoordinateResponse

CoordinateResponse json
  lat Double
  lng Double

-- DB
User
    ident Text
    isAdmin Bool
    createdAt UTCTime
    UniqueUser ident
    deriving Typeable Eq Show

GitHub
   userId UserId
   value GitHubUserResponse
   deriving Eq Show

GitHubUserResponse json
   login Text Maybe
   node_id Text Maybe
   avatar_url Text Maybe
   gravatar_id Text Maybe
   url Text Maybe
   html_url Text Maybe
   followers_url Text Maybe
   following_url Text Maybe
   gists_url Text Maybe
   starred_url Text Maybe
   subscriptions_url Text Maybe
   organizations_url Text Maybe
   repos_url Text Maybe
   events_url Text Maybe
   received_events_url Text Maybe
   type Text Maybe
   site_admin Bool Maybe
   name Text Maybe
   company Text Maybe
   blog Text Maybe
   location Text Maybe
   email Text Maybe
   hireable Bool Maybe
   bio Text Maybe Maybe
   public_repos Int Maybe
   public_gists Int Maybe
   followers Int Maybe
   following Int Maybe
   created_at UTCTime Maybe
   updated_at UTCTime Maybe
   deriving Generic Eq Show Read
   
Bookmarks
    userId UserId
    items [CompanyId]
    deriving Eq Show

Company json
    name Text
    website Text
    industry Text
    office Office
    socials Socials
    stack [Text]
    startup Bool
    remote Bool
    createdAt UTCTime
    addedBy UserId Maybe
    deriving Eq Show Read

Coordinate json
    lat Double
    lon Double
    deriving Eq Show Read

Office json
    address Text
    coordinate Coordinate
    deriving Eq Show Read

Socials json
    github Text
    linkedin Text Maybe
    twitter Text Maybe
    deriving Eq Show Read

NewCompany json
    name Text
    website Text
    industry Text
    office Office
    socials Socials
    startup Bool
    remote Bool
    stack [Text]
    createdAt UTCTime
    addedBy UserId Maybe
    deriving Eq Show Read
